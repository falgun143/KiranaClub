  url      = "postgresql://postgres.xhxzbebwesibkbqvqatd:pandhargota@aws-0-ap-south-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
  directUrl = "postgresql://postgres.xhxzbebwesibkbqvqatd:pandhargota@aws-0-ap-south-1.pooler.supabase.com:5432/postgres"
