model Job {
  id      String   @id @default(uuid())
  status  String
  visits  Visit[]
  error  Error[]
}

model Visit {
  id        Int      @id @default(autoincrement())
  store_id  String
  visit_time String
  images    Image[]
  job       Job      @relation(fields: [jobId], references: [id])
  jobId     String
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  perimeter Float
  visit     Visit    @relation(fields: [visitId], references: [id])
  visitId   Int
}

model Error {
  id      Int   @id @default(autoincrement())
  store_id String
  message String
  job     Job    @relation(fields: [jobId], references: [id])
  jobId   String
}


